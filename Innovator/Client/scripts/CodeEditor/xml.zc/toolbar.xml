<?xml version="1.0" encoding="UTF-8"?>
<toolbarapplet
	on_load = "onToolbarLoad"
	on_click = "onToolbarClick"
	on_change = "onToolbarClick"
	buttonsize = "26,25"
	top_border = "1">
	<toolbar id="normal">
		<button image="../images/Print.svg" id="print" tooltip="打印"/>
		<separator/>
		<button image="../images/Undo.svg" id="undo" tooltip="撤消"/>
		<button image="../images/Redo.svg" id="redo" tooltip="重做"/>
		<separator/>
		<button image="../images/ExecuteSearch.svg" id="find" tooltip="查找"/>
		<button image="../images/ViewRevisions.svg" id="replace" tooltip="替换"/>
		<separator/>
		<button image="../images/Unindent.svg" id="unindent" tooltip="取消缩进"/>
		<button image="../images/Indent.svg" id="indent" tooltip="缩进"/>
		<separator/>
		<button image="../images/Formatting.svg" id="formatting" tooltip="格式化"/>
		<button image="../images/Comment.svg" id="comment" tooltip="注释"/>
		<button image="../images/UnComment.svg" id="uncomment" tooltip="取消注释"/>
		<separator/>
		<button image="../images/Compile.svg" id="chksyn" tooltip="检查语法"/>
		<separator/>
		<choice id="side" width="auto">
			<choiceitem id="server">Server-side</choiceitem>
			<choiceitem id="client">Client-side</choiceitem>
		</choice>
		<choice id="method_lang" width="auto">
			<choiceitem/>
		</choice>
		<separator/>
		<button image="../images/Tree.svg" id="ftoc" state="1" tooltip="显示代码指南"/>
		<button image="../images/HideTOC.svg" id="toc_pos" state="0" tooltip="代码指南左/右"/>
		<separator/>
		<button image="../images/HelpLookup.svg" id="help" tooltip="关于此方法的帮助"/>
		<button image="../images/Help.svg" id="fhelp" state="1" tooltip="显示方法帮助"/>
	</toolbar>
</toolbarapplet>